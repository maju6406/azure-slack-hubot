{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "siteName": {
      "type": "string",
      "metadata": {
        "description": "The name of the web app that will host hubot"
      }
    },
    "hostingPlanName": {
      "type": "string",
      "metadata": {
        "description": "The name of the app service plan to use for hosting the web app"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "The location to use for creating the web app, hosting plan and storage account. Defaults to the resource group location."
      }
    },
    "sku": {
      "type": "string",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3"
      ],
      "defaultValue": "B1",
      "metadata": {
        "description": "The pricing tier for the hosting plan (F1=Free, D1=Shared, B1-B3=Basic, S1-S3=Standard)"
      }
    },
    "enableAlwaysOn": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Enable or disable always on. If you choose F1 or D1 for the sku, this should be set to false as it is not supported."
      }
    },
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "The name of the storage account that will host hubot's brain"
      }
    },
    "storageAccountType": {
      "type": "string",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_ZRS"
      ],
      "metadata": {
        "description": "The type of storage account (locally-redundant storage, geo-redundant storage, zone-redundant storage)"
      },
      "defaultValue": "Standard_LRS"
    },
    "slackApiToken": {
      "type": "securestring",
      "metadata": {
        "description": "The hubot API token from Slack"
      }
    },
    "repoUrl": {
      "type": "string",
      "metadata": {
        "description": "The URL of the source control repository"
      }
    },
    "branch": {
      "type": "string",
      "defaultValue": "main",
      "metadata": {
        "description": "The branch of the source control repository to deploy"
      }
    }
  },
  "variables": {
    "storageApiVersion": "2022-09-01"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('storageAccountName')]",
      "apiVersion": "2022-09-01",
      "location": "[parameters('location')]",
      "kind": "StorageV2",
      "sku": {
        "name": "[parameters('storageAccountType')]"
      },
      "properties": {
        "supportsHttpsTrafficOnly": true,
        "minimumTlsVersion": "TLS1_2"
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "name": "[parameters('hostingPlanName')]",
      "apiVersion": "2022-09-01",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('sku')]"
      },
      "properties": {
        "reserved": false
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "name": "[parameters('siteName')]",
      "apiVersion": "2022-09-01",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
        "siteConfig": {
          "alwaysOn": "[parameters('enableAlwaysOn')]",
          "requestTracingEnabled": true,
          "httpLoggingEnabled": true,
          "logsDirectorySizeLimit": 40,
          "detailedErrorLoggingEnabled": true,
          "appSettings": [
            {
              "name": "HUBOT_BRAIN_AZURE_STORAGE_ACCOUNT",
              "value": "[parameters('storageAccountName')]"
            },
            {
              "name": "HUBOT_BRAIN_AZURE_STORAGE_ACCESS_KEY",
              "value": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), variables('storageApiVersion')).keys[0].value]"
            },
            {
              "name": "HUBOT_SLACK_TOKEN",
              "value": "[parameters('slackApiToken')]"
            },
            {
              "name": "HUBOT_ADAPTER",
              "value": "slack"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "~18"
            }
          ]
        }
      },
      "resources": [
        {
          "type": "sourcecontrols",
          "name": "web",
          "apiVersion": "2022-09-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('siteName'))]"
          ],
          "properties": {
            "repoUrl": "[parameters('repoUrl')]",
            "branch": "[parameters('branch')]",
            "isManualIntegration": true
          }
        }
      ]
    }
  ]
}
